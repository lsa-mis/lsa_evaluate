<div id="opportunity-partial" class="my-4">
  <h2>Explore Opportunities</h2>
  
  <div class="row g-4 align-items-end">
    <!-- Department Selection -->
    <div class="col">
      <label for="department-select" class="form-label visually-hidden">Department</label>
      <select class="form-select" id="department-select" name="department_id">
        <option value="">Department</option>
        <%= options_from_collection_for_select(@departments, :id, :name) %>
      </select>
    </div>

    <!-- Contest Selection -->
    <div class="col">
      <label for="container-select" class="form-label visually-hidden">Collections</label>
      <select class="form-select" id="container-select" name="container_id">
        <option value="">Contest Collection</option>
        <%= options_from_collection_for_select(@containers, :id, :name) %>
      </select>
    </div>

  </div>
</div>
