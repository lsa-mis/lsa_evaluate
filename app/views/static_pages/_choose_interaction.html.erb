<div id="choose-interaction" class="my-4">
  <div class="row g-4 align-items-top justify-content-center">

    <div id="student-submit-entry" class="col mb-4">
      <div class="card">
        <h3 class="m-2">Explore / Submit Entry / Update Profile</h3>
        <div class="card-body">
          <% if (content = render_editable_content('home', 'submit_entry')) %>
            <p>
              <%= content %>
            </p>
          <% end %>

          <div>
            <% if current_user.profile_exists? %>
              <%= button_to 'View Dashboard', applicant_dashboard_path, method: :get, class: 'btn btn-primary' %>
            <% else %>
              <%= button_to 'Create Profile', new_profile_path, method: :get, class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if current_user.is_employee? %>
      <div id="manage-submissions" class="col mb-4">
        <div class="card">
          <h3 class="m-2">Create/Manage Contest Collections</h3>
          <div class="card-body">
            <% if (content = render_editable_content('home', 'manage_submissions')) %>
              <p class="">
                <%= content %>
              </p>
            <% end %>
            <div>
              <%= link_to 'Contest Collections', containers_path, method: :get, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
