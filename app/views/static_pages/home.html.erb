<!-- app/views/static_pages/home.html.erb -->

<div>
  <% if user_signed_in? %>
    <div class="row">
      <div class="w-100 bg-secondary-subtle">
        <header>
          <h1 class="text-start mt-6 ms-6">Welcome <%= current_user.display_name_or_uid %>!</h1>
        </header>
        <div class="row mx-6 mb-4">
          <% if (content = render_editable_content('home', 'instructions')) %>
              <%= content %>
          <% end %>
        </div>
      </div>
      <div data-controller="interaction" data-interaction-target="content">
        <%= render 'choose_interaction' %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-8 col-lg-6 w-100 bg-secondary-subtle">
        <header>
          <h1 class="text-start mt-6 ms-6">Welcome to LSA Evaluate</h1>
        </header>
        <div class="row mx-6">
          <% if (content = render_editable_content('home', 'description')) %>
              <%= content %>
          <% end %>
        </div>
        <div class="d-grid w-25 ms-6 mt-6 mb-8">
          <%= button_to "Login to LSA Evaluate", user_saml_omniauth_authorize_path, class: "btn btn-warning btn-sm mb-4", data: { turbo: "false" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>