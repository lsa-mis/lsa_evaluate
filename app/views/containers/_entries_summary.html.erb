<%# app/views/containers/_entries_summary.html.erb %>
<div class="mb-2">
  <div class="d-flex align-items-center mb-0">
    <h4 class="mb-0 me-2">Entries Summary</h4>
    <i class="bi bi-info-circle"
       data-bs-toggle="tooltip"
       data-bs-placement="right"
       data-bs-html="true"
       title="Summary of active entries across all active contests in this collection"></i>
  </div>
  <div>
    <div class="row">
      <div class="col-12">
        <h5 class="mb-3">Total Entries in all Active Contests: <%= container.total_active_entries %></h5>

        <% if container.entries_summary.any? %>
          <h6 class="mb-2">Entries by Campus:</h6>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Campus</th>
                  <th class="text-end">Count</th>
                </tr>
              </thead>
              <tbody>
                <% container.entries_summary.each do |summary| %>
                  <tr>
                    <td><%= summary.campus_descr %></td>
                    <td class="text-end"><%= summary.entry_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No active entries found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
