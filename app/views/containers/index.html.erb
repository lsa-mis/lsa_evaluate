<div class="container d-flex justify-content-between mt-4">
  <h1>Manage Submissions</h1> 
  <div>
    <%= link_to "Create a new container", new_container_path, {class: 'btn btn-primary'} %>
  </div>
</div>

<div class="container-fluid d-flex flex-column justify-content-between mt-4">
  <% @containers.each do |container| %>
    <div class="row mt-2">
      <div class="">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><%= container.name %></h5>
              <small class="text-muted">
                <%= container.department.display_name %> - 
                <% admins = container.assignments.container_administrators %>
                <% if admins.any? %>
                  <%= pluralize(admins.count, admins.first.role.kind) %>:
                  <%= admins.map { |assignment| assignment.user.display_name_or_email }.join(', ') %>
                <% else %>
                  No Administrators Assigned
                <% end %>
              </small>
            <%= link_to "Show Container Details", container_path(container), class: "btn btn-secondary" %>
          </div>
          <div class="card-body">
            <%= link_to "Create a New Contest Description", new_container_contest_description_path(container), class: "btn btn-secondary" %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Short Name</th>
                  <th>Eligibility Rules</th>
                  <td>Actions</td>
                </tr>
              </thead>
              <tbody>
                <% container.contest_descriptions.each do |description| %>
                    <tr>
                    <td><%= description.name %></td>
                    <td><%= description.short_name %></td>
                    <td><%= description.eligibility_rules %></td>
                    <td>
                      <%= link_to "View instances", container_contest_description_contest_instances_path(container, description), class: "btn btn-primary btn-sm" %>
                      <%= button_to "Destroy", container_contest_description_path(container, description), method: :delete, data: { controller: 'confirm', confirm_message_value: 'Are you sure you want to delete this?' } %>
                    </td>
                    </tr>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
