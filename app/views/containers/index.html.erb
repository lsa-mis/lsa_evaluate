<h1>Containers</h1>
<h2>Manage Submissions</h2>
<div>
  <%= link_to "New Container", new_container_path, {class: "btn btn-primary"} %>
</div>

<div class="container-fluid d-flex flex-column justify-content-between mt-4">
  <% @containers.each do |container| %>
    <div class="row mt-2">
      <div class="">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><%= container.name %></h5><small class="text-muted"><%= "#{container.department.display_name} - #{container.assignments.first.role.display_name}: #{container.assignments.first.user.display_name_or_email}" %></small>
            <%= link_to "Show", container_path(container), class: "btn btn-secondary" %>
          </div>
          <div class="card-body">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Short Name</th>
                  <th>Eligibility Rules</th>
                  <td>Actions</td>
                </tr>
              </thead>
              <tbody>
                <% container.contest_descriptions.each do |description| %>
                    <tr>
                    <td><%= description.name %></td>
                    <td><%= description.short_name %></td>
                    <td><%= description.eligibility_rules %></td>
                    <td><%= link_to "View instances", container_contest_description_contest_instances_path(container, description) %></td>
                    </tr>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
