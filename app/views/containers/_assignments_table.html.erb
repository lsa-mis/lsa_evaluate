<table class="table table-striped mt-2">
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th>Actions</th> <!-- New column for actions -->
    </tr>
  </thead>
  <tbody>
    <% assignments.each do |assignment| %>
      <tr id="<%= dom_id(assignment) %>">
        <td><%= assignment.user.display_name_or_email %></td>
        <td><%= assignment.role.kind %></td>
        <td>
          <%= link_to "Remove", container_assignment_path(container, assignment), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "link_to text-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>