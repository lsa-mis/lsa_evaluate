<!-- app/views/shared/_flash_messages.html.erb -->
<% flash.each do |type, message| %>
  <% bootstrap_type = case type
     when 'notice' then 'success'
     when 'alert' then 'danger'
     else type
     end %>
  <div data-controller="flash" class="alert alert-<%= bootstrap_type %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" data-action="click->flash#dismiss"></button>
  </div>
<% end %>