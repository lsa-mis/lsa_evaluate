<%# app/views/shared/_description_modal.html.erb %>
<div class="modal fade"
     id="descriptionModal"
     tabindex="-1"
     role="dialog"
     aria-modal="true"
     aria-labelledby="descriptionModalLabel"
     data-description-modal-target="modal"
     inert>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="descriptionModalLabel">Description</h5>
        <button type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
                data-description-modal-target="closeButton"></button>
      </div>
      <div class="modal-body" data-description-modal-target="content">
        <!-- Full description will be loaded here -->
      </div>
      <div class="modal-footer">
        <button type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div data-description-modal-target="mainContent">
  <!-- This will wrap the main content -->
</div>
