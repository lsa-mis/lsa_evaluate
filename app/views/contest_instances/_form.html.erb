<%= simple_form_for([@container, @contest_description, @contest_instance]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :active, hint: "Specify whether this contest is currently accepting entries." %>
    <%= f.input :archived %>
    <%= f.association :contest_description, label_method: :name %>
    <%= f.input :date_open, 
                as: :datetime, 
                label: "Select Contest Open Date", 
                input_html: { class: "form-control" } %>
    <%= f.input :date_closed,
                as: :datetime, 
                label: "Select Contest Close Date", 
                input_html: { class: "form-control" } %>
    <%= f.input :notes %>
    <%= f.input :judging_open %>
    <%= f.input :judging_rounds %>
    <%= f.input :judge_evaluations_complete %>
    <%= f.input :maximum_number_entries_per_applicant %>
    <%= f.input :require_pen_name, 
          as: :boolean, 
          label: "Require Pen Name for entries?",
          hint: "Check this box if applicants must use a pen name to submit their entries." %>
    <%= f.input :require_campus_employment_info, 
                as: :boolean, 
                label: "Require campus employment check",
                hint: "Check this box if you require the applicant to notify you of their on campus employment (GSI, workstudy ...)." %>
    <%= f.input :require_finaid_info, 
                as: :boolean, 
                label: "Require financial aid check",
                hint: "Check this box if you want the applicant to describe any financial aid they are receiving." %>
    <%= f.input :created_by, as: :hidden, input_html: { value: current_user.email} %>

    <h3>Categories</h3>
    <div class="form-group">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :kind do |b| %>
      <div class="checkbox">
        <label>
        <%= b.check_box %> <%= b.text %>
        </label>
      </div>
      <% end %>
      <small class="form-text text-muted">Select the categories that apply to this contest.</small>
    </div>

    <h3>Class Level Requirements</h3>
    <div class="form-group">
      <%= f.collection_check_boxes :class_level_ids, ClassLevel.all, :id, :name do |b| %>
        <div class="checkbox">
          <label>
            <%= b.check_box %> <%= b.text %>
          </label>
        </div>
      <% end %>
      <small class="form-text text-muted">Select the class levels of applicants that are eligible for this contest.</small>
    </div>

  </div>

  <div class="form-actions py-2">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", container_contest_description_contest_instances_path(@container, @contest_description), class: "text-danger link_to" %>
  </div>
<% end %>