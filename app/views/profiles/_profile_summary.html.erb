<div class="bg-secondary text-white text-center px-2">

    <div class="d-flex flex-row flex-xxl-column justify-content-between align-items-center">
      <!-- Welcome Message -->
      <div class="d-xxl-none"></div>
      <div class="text-center">
        <h2>Welcome<br><%= @profile.preferred_first_name %>!</h2>
        <p class="text-white fw-light"><small>UM ID: <%= @profile.umid %></small></p>
      </div>
      <!-- Edit Profile Link -->
      <div>
        <%= link_to edit_profile_path(@profile), class: 'text-white link-underline link-underline-opacity-0' do %>
          <i class="bi bi-pencil"></i> <span class="fw-light">Edit</span>
        <% end %>
      </div>
    </div>
  <hr>
  <div class="text-white text-start small">
    <!-- Address Section -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-xxl-1">
      <div class="col">
        <p class="text-white m-0">
          Home Address
          <%= simple_format(@profile.home_address.full_address, class: "text-white fw-light lh-1") if @profile.home_address %>
        </p>
      </div>
      <div class="col">
        <p class="text-white m-0">
          Campus Address
          <%= simple_format(@profile.campus_address.full_address, class: "text-white fw-light lh-1") if @profile.campus_address %>
        </p>
      </div>
    </div>
    <hr>

    <!-- Other Profile Data -->
    <div class="row row-cols-1 row-cols-sm-3 row-cols-xxl-1">
      <!-- Grade Level -->
      <div class="col">
        <p class="text-white">
          Grade Level:<br>
          <span class="fw-light"><%= @profile.class_level&.name %></span>
        </p>
      </div>
      <!-- School -->
      <div class="col">
        <p class="text-white">
          School:<br>
          <span class="fw-light"><%= @profile.school&.name %></span>
        </p>
      </div>
      <!-- Campus -->
      <div class="col">
        <p class="text-white">
          Campus:<br>
          <span class="fw-light"><%= @profile.campus&.campus_descr %></span>
        </p>
      </div>
      <!-- Major -->
      <div class="col">
        <p class="text-white">
          Major:<br>
          <span class="fw-light"><%= @profile.major %></span>
        </p>
      </div>
      <!-- Department -->
      <div class="col">
        <p class="text-white">
          Dept:<br>
          <span class="fw-light"><%= @profile.department&.name %></span>
        </p>
      </div>
      <!-- Graduation Date -->
      <div class="col">
        <p class="text-white">
          Graduation Date:<br>
          <span class="fw-light"><%= @profile.grad_date.strftime("%B %Y") %></span>
        </p>
      </div>
      <!-- Degree -->
      <div class="col">
        <p class="text-white">
          Degree:<br>
          <span class="fw-light"><%= @profile.degree %></span>
        </p>
      </div>
      <!-- Campus Employee -->
      <div class="col">
        <p class="text-white">
          Current (workstudy, GSI, etc)<br>
          <span class="fw-light"><%= @profile.campus_employee ? 'Yes' : 'No' %></span>
        </p>
      </div>
      <!-- Financial Aid -->
    <% if @profile.receiving_financial_aid && @profile.financial_aid_description.present? %>
      <div class="col">
        <p class="text-white">
          Financial Aid:<br>
          <span class="fw-light"><%= boolean_to_yes_no(@profile.receiving_financial_aid) %></span>
        </p>
      </div>
        <!-- Financial Aid Description -->
        <div class="col">
          <p class="text-white">
            Financial Aid Description:<br>
            <span class="fw-light"><%= @profile.financial_aid_description %></span>
          </p>
        </div>
      <% end %>
      <!-- Name for Publication -->
      <div class="col">
        <p class="text-white">
          Name for Publication:<br>
          <span class="fw-light"><%= @profile.display_name %></span>
        </p>
      </div>

      <% if @profile.hometown_publication.present? %>
        <!-- Hometown News -->
        <div class="col">
          <p class="text-white">
            Hometown News:<br>
            <span class="fw-light"><%= @profile.hometown_publication %></span>
          </p>
        </div>
      <% end %>

      <% if @profile.pen_name.present? %>
        <!-- Pen Name -->
        <div class="col">
          <p class="text-white">
            Pen Name (default):<br>
            <span class="fw-light"><%= @profile.pen_name %></span>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Last Updated -->
  <div class="mt-2">
    <p class="text-white">
      <small><em>Last updated:<br> <%= @profile.updated_at.strftime("%B %d, %Y") %></em></small>
    </p>
  </div>
</div>