
<%= simple_form_for(@user_role) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user, as: :select, collection: User.all, label_method: :email, value_method: :id %>
    <%= f.association :role, as: :select, collection: Role.all, label_method: :kind, value_method: :id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
