<% content_for :head do %>
  <%= stylesheet_link_tag "judge_dashboard", "data-turbo-track": "reload" %>
<% end %>

<div class="judge-dashboard">
  <h1>Judge Dashboard</h1>

  <div class="row mx-4 mb-4">
    <% if (content = render_editable_content('judge_dashboard', 'instructions')) %>
      <%= content %>
    <% end %>
  </div>

  <h3>Hello <%= "#{current_user.first_name} #{current_user.last_name} (#{display_email(current_user.email)})!" %></h3>
  <p>These are your judging assignments:</p>

  <% @judging_assignments.each_with_index do |assignment, index| %>
    <div class="accordion mb-4" id="contestAccordion<%= index %>">
      <div class="accordion-item">
        <h2 class="accordion-header" id="contestHeader<%= index %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#contestCollapse<%= index %>" aria-expanded="false"
                  aria-controls="contestCollapse<%= index %>">
            <div class="w-100">
              <h4 class="mb-0"><%= assignment.contest_instance.contest_description.name %></h4>
              <% if assignment.contest_instance.current_judging_round %>
                <p class="text-muted mb-0">
                  Round: <%= assignment.contest_instance.current_judging_round.round_number %>
                  (<%= format_datetime(assignment.contest_instance.current_judging_round.start_date) %> -
                  <%= format_datetime(assignment.contest_instance.current_judging_round.end_date) %>)
                </p>
              <% else %>
                <p class="text-muted mb-0">No active round</p>
              <% end %>
            </div>
          </button>
        </h2>

        <div id="contestCollapse<%= index %>" class="accordion-collapse collapse"
             aria-labelledby="contestHeader<%= index %>"
             data-bs-parent="#contestAccordion<%= index %>">
          <div class="accordion-body">
            <% if assignment.contest_instance.judging_open? %>
              <div class="row" data-controller="entry-drag"
                   data-entry-drag-url-value="<%= update_rankings_container_contest_description_contest_instance_judging_round_path(
                     assignment.contest_instance.contest_description.container,
                     assignment.contest_instance.contest_description,
                     assignment.contest_instance,
                     assignment.contest_instance.current_judging_round
                   ) %>"
                   data-entry-drag-required-count-value="<%= assignment.contest_instance.current_judging_round.required_entries_count %>"
                   data-entry-drag-finalized-value="<%= EntryRanking.where(
                     judging_round: assignment.contest_instance.current_judging_round,
                     user: current_user
                   ).any?(&:finalized?) %>">

                <div class="col-md-6">
                  <div class="card">
                    <div class="card-header bg-light">
                      <h3 class="h5 mb-0">Available Entries</h3>
                    </div>
                    <div class="card-body">
                      <div class="entries-list" data-entry-drag-target="availableEntries">
                        <% ranked_entry_ids = EntryRanking.where(
                          judging_round: assignment.contest_instance.current_judging_round,
                          user: current_user
                        ).pluck(:entry_id) %>

                        <% assignment.contest_instance.current_round_entries
                            .where.not(id: ranked_entry_ids)
                            .each do |entry| %>
                          <div class="card mb-2" data-entry-id="<%= entry.id %>">
                            <div class="card-body d-flex align-items-center">
                              <div class="drag-handle me-2">⋮⋮</div>
                              <div class="flex-grow-1">
                                <h5 class="card-title d-flex align-items-baseline">
                                  <%= entry.title %>
                                  <span class="text-muted ms-2" style="font-size: 0.6em;">(entryID: <%= entry.id %>)</span>
                                </h5>
                                <div class="btn-group">
                                  <%= link_to 'View Entry', rails_blob_path(entry.entry_file, disposition: "inline"),
                                      target: '_blank', class: 'btn btn-sm btn-secondary' %>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="card">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                      <h3 class="h5 mb-0">Selected Entries (Drag to Rank)</h3>
                      <span class="badge bg-primary rated-entries-counter" data-entry-drag-target="counter">
                        <%= EntryRanking.where(
                          judging_round: assignment.contest_instance.current_judging_round,
                          user: current_user
                        ).count %>/<%= assignment.contest_instance.current_judging_round.required_entries_count %>
                      </span>
                    </div>
                    <div class="card-body">
                      <div class="alert alert-info">
                        Please select and rank <%= assignment.contest_instance.current_judging_round.required_entries_count %> entries
                      </div>
                      <div class="rated-entries" data-entry-drag-target="ratedEntries">
                        <% EntryRanking.includes(:entry)
                            .where(judging_round: assignment.contest_instance.current_judging_round, user: current_user)
                            .order(:rank)
                            .each do |ranking| %>
                          <div class="card mb-2" data-entry-id="<%= ranking.entry_id %>">
                            <div class="card-body d-flex align-items-center">
                              <div class="drag-handle me-2">⋮⋮</div>
                              <div class="flex-grow-1">
                                <h5 class="card-title d-flex align-items-baseline">
                                  <%= ranking.entry.title %>
                                  <span class="text-muted ms-2" style="font-size: 0.6em;">(entryID: <%= ranking.entry.id %>)</span>
                                </h5>
                                <div class="btn-group">
                                  <%= link_to 'View Entry', rails_blob_path(ranking.entry.entry_file, disposition: "inline"),
                                      target: '_blank', class: 'btn btn-sm btn-secondary' %>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>

                      <% if @entry_rankings.present? %>
                        <% unless @entry_rankings.any?(&:finalized?) %>
                          <%= form_tag finalize_rankings_container_contest_description_contest_instance_judging_round_path(
                            assignment.contest_instance.contest_description.container,
                            assignment.contest_instance.contest_description,
                            assignment.contest_instance,
                            assignment.contest_instance.current_judging_round
                          ), class: 'mt-3' do %>
                            <button type="submit" class="btn btn-primary finalize-rankings-btn"
                                    data-entry-drag-target="finalizeButton"
                                    disabled>
                              Finalize Rankings
                            </button>
                          <% end %>
                        <% end %>
                      <% else %>
                        <%= form_tag finalize_rankings_container_contest_description_contest_instance_judging_round_path(
                          assignment.contest_instance.contest_description.container,
                          assignment.contest_instance.contest_description,
                          assignment.contest_instance,
                          assignment.contest_instance.current_judging_round
                        ), class: 'mt-3' do %>
                          <button type="submit" class="btn btn-primary finalize-rankings-btn"
                                  data-entry-drag-target="finalizeButton"
                                  disabled>
                            Finalize Rankings
                          </button>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="alert alert-info">
                Judging is not currently open for this contest.
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @judging_assignments.empty? %>
    <div class="alert alert-info">
      You have not been assigned to judge any contests.
    </div>
  <% end %>
</div>
